---
import Base from '../../layouts/Base.astro';
import SEO from '../../components/SEO.astro';
import { getCollection } from 'astro:content';

const entries = await getCollection('use-cases');
const sorted = entries.sort((a, b) => a.data.order - b.data.order);
---

<Base title="Use Cases â€” deja" variant="content">
  <SEO
    slot="head"
    title="Use Cases â€” deja"
    description="Real-world walkthroughs of deja in action. Incident response, agent onboarding, product memory, and more."
    keywords="deja use cases, agent memory use cases, incident response memory, agent onboarding"
    path="/use-cases"
    type="article"
    section="Use Cases"
    breadcrumbs={[{ name: 'Use Cases', path: '/use-cases' }]}
  />
  <section class="pt-16 pb-8">
    <div class="bg-void/90 backdrop-blur-sm border border-brass/10 rounded-sm p-8 md:p-10 shadow-hero">
      <div class="font-mono text-[11px] font-bold tracking-widest uppercase text-brass mb-4">Use Cases</div>
      <h1 class="font-serif-sc text-4xl md:text-5xl font-bold tracking-tight m-0 mb-4">
        Real-world walkthroughs
      </h1>
      <p class="font-serif font-light text-lg text-chrome-dark max-w-3xl m-0">
        How teams are using deja to give their agents persistent, shared memory.
      </p>
    </div>
  </section>

  <div class="grid gap-6 grid-cols-1 sm:grid-cols-2 mt-8">
    {sorted.map(entry => (
      <a href={`/use-cases/${entry.id}`} class="group block bg-steel border border-brass/10 rounded-sm p-6 relative shadow-card hover:border-brass/30 transition-colors">
        <div class="absolute top-0 left-0 right-0 h-px bg-linear-to-r from-transparent via-brass to-transparent opacity-30"></div>
        {entry.data.industry && (
          <div class="flex items-center gap-2 mb-3">
            <span class="font-mono text-[10px] font-bold tracking-widest uppercase px-2 py-0.5 rounded bg-brass/10 text-brass">{entry.data.industry}</span>
          </div>
        )}
        <h3 class="font-serif font-semibold text-xl tracking-tight m-0 mb-2 group-hover:text-brass transition-colors">{entry.data.title}</h3>
        <p class="font-serif font-light text-chrome-dark text-sm m-0">{entry.data.description}</p>
      </a>
    ))}
  </div>
</Base>
